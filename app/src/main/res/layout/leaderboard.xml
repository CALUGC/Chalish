<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:backgroundTintMode="src_atop"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/constraintLayout"
        app:layout_anchorGravity="center">


        <TextView
            android:id="@+id/tvShopuptoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_up"
            android:background="@drawable/toolbar"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnPrePage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/abc_vector_test"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvShoptoolbar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLeaderBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Leaderboard"
            android:textColor="@color/colorWhite"
            android:textSize="45sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="145dp"
            app:layout_constraintStart_toStartOf="@+id/tvShopuptoolbar"
            app:layout_constraintTop_toTopOf="@+id/tvShopuptoolbar" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tbllUp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:background="@drawable/btn_radius"
                android:backgroundTint="@color/colorRewardPageOrange"
                android:padding="10dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/tbllBtm"
                app:layout_constraintTop_toBottomOf="@+id/tbllUp">


                <TextView
                    android:id="@+id/tvReward1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bighead"
                   />

                <TextView
                    android:id="@+id/tvRewardStr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/RewardEveryDayStr" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/btn_radius"
                android:backgroundTint="@color/colorRewardPageOrange"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/tbllBtm">

                <TextView
                    android:id="@+id/tvReward2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bighead"
                    />

                <TextView
                    android:id="@+id/tvRewardStr2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/RewardLevelStr" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/btn_radius"
                android:backgroundTint="@color/colorRewardPageOrange"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/tbllBtm">

                <TextView
                    android:id="@+id/tvReward3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bighead"
                   />

                <TextView
                    android:id="@+id/tvRewardStr3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/RewardFestivalStr" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/btn_radius"
                android:backgroundTint="@color/colorRewardPageOrange"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/tbllBtm">

                <TextView
                    android:id="@+id/tvReward4"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bighead"

                   />

                <TextView
                    android:id="@+id/tvRewardStr4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/RewardOnlineStr" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tbllUp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="right|center_vertical"
                android:padding="15dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/tbllBtm"
                app:layout_constraintTop_toBottomOf="@+id/tbllUp">

                <Button
                    android:id="@+id/btnReward1"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/btn_radius"
                    android:backgroundTint="@color/colorRewardPageCoffee"
                    android:text="@string/RewardReceive"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:gravity="right|center_vertical"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/tbllBtm">

                <Button
                    android:id="@+id/btnReward2"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/btn_radius"
                    android:backgroundTint="@color/colorRewardPageCoffee"
                    android:text="@string/RewardReceive"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:gravity="right|center_vertical"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/tbllBtm">

                <Button
                    android:id="@+id/btnReward3"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/btn_radius"
                    android:backgroundTint="@color/colorRewardPageCoffee"
                    android:text="@string/RewardReceive"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:gravity="right|center_vertical"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/tbllBtm">

                <Button
                    android:id="@+id/btnReward4"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/btn_radius"
                    android:backgroundTint="@color/colorRewardPageCoffee"
                    android:text="@string/RewardReceive"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>