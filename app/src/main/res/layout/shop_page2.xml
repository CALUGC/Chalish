<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:backgroundTintMode="src_atop"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnBuy4"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:background="@color/grayShop"
            android:text="@string/purchase"
            android:textColor="@color/red"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivTool4"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnBuy3"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:layout_marginStart="50dp"
            android:background="@color/grayShop"
            android:text="@string/purchase"
            android:textColor="@color/red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivTool3"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <TextView
            android:id="@+id/tvShopuptoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_up"
            android:layout_marginTop="0dp"
            android:background="@drawable/toolbar"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnPrePage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/abc_vector_test"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/btnPagephead"
            android:layout_width="313dp"
            android:layout_height="87dp"
            android:layout_marginEnd="176dp"
            android:background="@drawable/btn_shop_head"
            android:text="@string/shophead"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ivTool2"
            android:layout_width="119dp"
            android:layout_height="157dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="50dp"
            android:contentDescription="@string/imgProduct"
            android:src="@drawable/tool2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvShopuptoolbar"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnBuy2"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:background="@color/grayShop"
            android:text="@string/purchase"
            android:textColor="@color/red"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivTool2"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ivTool"
            android:layout_width="119dp"
            android:layout_height="157dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="80dp"
            android:contentDescription="@string/imgProduct"
            android:src="@drawable/tool"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvShopuptoolbar"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:background="@color/grayShop"
            android:text="@string/purchase"
            android:textColor="@color/red"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/ivTool"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <ImageView
            android:id="@+id/ivTool3"
            android:layout_width="119dp"
            android:layout_height="157dp"
            android:contentDescription="@string/imgProduct"
            android:layout_marginTop="40dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/tool3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBuy"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ivTool4"
            android:layout_width="119dp"
            android:layout_height="157dp"
            android:contentDescription="@string/imgProduct"
            android:src="@drawable/tool4"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBuy2"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button2"
            android:layout_width="136dp"
            android:layout_height="61dp"
            android:background="@color/colorMainPageDarkBlue"
            android:text="@string/product"
            android:textColor="@color/colorMainPageBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="235dp" />

        <TextView
            android:id="@+id/tvTablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvTablet"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toStartOf="@+id/tvCoins"
            app:layout_constraintTop_toTopOf="@+id/tvShopuptoolbar"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金幣:9999999"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvShoptoolbar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>